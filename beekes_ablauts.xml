        <paradigm declension="mobile" case="N" form="e00" footnote="IV_mobile_nominative" />
        <paradigm declension="mobile" case="V" form="e00" footnote="Vb_mobile_vocative" />
        <paradigm declension="PD" case="Ac" form="e00" footnote="IV_pd_accusative" />
        <paradigm declension="HD" case="Ac" form="0e0" footnote="IV_hd_accusative" />
        <paradigm declension="mobile" case="L" form="0e0" footnote="I_mobile_others" />
        <paradigm declension="HD_A" case="I" form="0e00e" footnote="Va_hd_instrumental" />
        <paradigm declension="HD_B" case="I" form="00e" footnote="Va_hd_instrumental" />
        <paradigm declension="PD" case="I" form="?e00" footnote="IV/Vd_pd_instrumental" />
        <paradigm declension="PD" case="Da" form="0e0" footnote="I_mobile_others" />
        <paradigm declension="PD_mf" case="G+Abl" form="?eo0" footnote="IV/Vd_pd_mf_genitive" />
        <paradigm declension="PD_n" case="G+Abl" form="0e0" footnote="III/IV_pd_genitive-ablative" />
