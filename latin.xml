                        <declension_def id="sg-vro-mf" title="singular o-stem (in vowel + -r) animate" short_title="stem in vowel + -r" />
                    </declension_def>
                    <declension_def id="sg--o-mf" title="singular o-stem animate">
                        <declension_def id="sg-io-mf" title="singular o-stem (in -i) animate" short_title="stem in -i" />
                        <declension_def id="sg---o-mf" title="singular o-stem (not in -i) animate" short_title="other" />
                    </declension_def>
                </declension_def>
                <declension_def id="sg-o-n" title="singular o-stem inanimate" short_title="n" >
